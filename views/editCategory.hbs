<!doctype html>
<html lang="en">

<head>
    {{>links}}

</head>

<body>
    {{>header}}

    {{>adminAside}}

     <div class="content">
    {{#category}}
    <form action="/editCategory/{{categoryID}}" method="post">
        <div class="card">
            <div class="card-header">
                <h4>Edit Category</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="cname">Category Name</label>
                    <input type="text" class="form-control" name="category" id="category" value="{{this.categoryName}}">
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
    {{/category}}
</div>
</body>